{
  "comments": { "lineComment":"//","blockComment":["/*","*/"] },
  "brackets":[["{","}"],["[","]"],["(",")"]],
  "autoClosingPairs":[
    {"open":"{","close":"}"},{"open":"[","close":"]"},
    {"open":"(","close":")"},{"open":"\"","close":"\"","notIn":["string"]}
  ],
  "surroundingPairs":[
    {"open":"{","close":"}"},{"open":"[","close":"]"},
    {"open":"(","close":")"},{"open":"\"","close":"\""}
  ],
  "folding": {
    "markers":{
      "start":"^.*\\{\\s*$|^\\s*//\\s*region\\b",
      "end":"^\\s*\\}.*$|^\\s*//\\s*endregion\\b"
    }
  },
  "onEnterRules":[
    {
      "beforeText":{ "pattern":"^\\s*(?:func|type|if|else|while).*\\{\\s*$" },
      "afterText":{ "pattern":"^\\s*\\}" },
      "action":{ "indent":"indentOutdent" }
    },
    {
      "beforeText":{ "pattern":"^\\s*(?:func|type|if|else|while).*\\{\\s*$" },
      "action":{ "indent":"indent" }
    }
  ]
}
