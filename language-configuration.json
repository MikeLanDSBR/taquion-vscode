{
    // Define como os comentários funcionam na linguagem.
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },

    // Define os pares de caracteres que formam "blocos".
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],

    // Define quais caracteres devem ser fechados automaticamente ao digitar.
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }, // BUG CORRIGIDO: Estava fechando com "}"
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],

    // Permite selecionar um texto e digitar um caractere de abertura para "envelopar" o texto.
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],

    // Habilita o recolhimento (folding) de blocos de código.
    "folding": {
        "markers": {
            "start": "^.*\\{\\s*$",
            "end": "^\\s*\\}.*$"
        }
    },
    
    // Melhora a indentação automática ao pressionar Enter.
    "onEnterRules": [
        {
            "beforeText": {
                "pattern": "^\\s*(?:func|if|else|while).*\\{\\s*$"
            },
            "afterText": {
                "pattern": "^\\s*\\}"
            },
            "action": {
                "indent": "indentOutdent"
            }
        },
        {
            "beforeText": {
                "pattern": "^\\s*(?:func|if|else|while).*\\{\\s*$"
            },
            "action": {
                "indent": "indent"
            }
        }
    ]
}